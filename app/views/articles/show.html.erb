<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div class="card">
      <div class="card-header bg-dark text-light">
        <strong><%= @article.title %></strong>
      </div>
      <div class="card-body">
        <%= simple_format @article.description, class: "card-text" %>
      </div>
      <div class="card-footer bg-transparent">
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger ml-2" %>
        <%= link_to 'Cancel', articles_path, class: "btn btn-sm btn-link" %>
      </div>
    </div>
  </div>
</div>
