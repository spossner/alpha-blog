<h1>Articles listing page</h1>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article|  %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-sm btn-primary" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-success" %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
