<% if @article.errors.any? %>
  <h2>Errors while saving article</h2>
  <ul class="error">
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-5">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div><!-- col-sm-10-->
      </div><!-- form-group -->
      <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", placeholder: "Your article goes here", rows: 5 %>
        </div><!-- col-sm-10 -->
      </div><!-- form-group -->
      <div class="form-group row">
        <div class="col-sm-6 offset-sm-2">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Cancel', articles_path, class: "btn btn-link ml-2" %>
        </div><!-- col-sm-6 -->
      </div><!-- form-group -->
    <% end %>
  </div><!-- col-sm-12 -->
</div><!-- row -->