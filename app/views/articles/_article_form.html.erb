<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: @article, local: true) do |f| %>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :title, class: "col-form-label" %>
        </div><!-- col-sm-2 -->
        <div class="col-sm-5">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div><!-- col-sm-10-->
      </div><!-- form-group -->
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :description, class: "col-form-label" %>
        </div><!-- col-sm-2 -->
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", placeholder: "Your article goes here", rows: 5 %>
        </div><!-- col-sm-10 -->
      </div><!-- form-group -->

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label "Categories", class: "col-form-label" %>
        </div><!-- col-sm-2 -->
        <div class="col-sm-10">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <div class="form-check form-check-inline">
              <%= cb.label(class: "form-check-label") { cb.check_box(class: "form-check-input") + cb.text } %>
            </div><!-- form-check form-check-inline -->
          <% end %>
        </div><!-- col-sm-10 -->
      </div><!-- form-group -->
      <div class="form-group row">
        <div class="col-sm-6 offset-sm-2">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Cancel', articles_path, class: "btn btn-link ml-2" %>
        </div><!-- col-sm-6 -->
      </div><!-- form-group -->
    <% end %>
  </div><!-- col-sm-12 -->
</div><!-- row -->