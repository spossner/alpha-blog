<% obj.each do |category|  %>
  <div class="card category-card">
    <div class="card-body row">
      <div class="col-md-6">
        <h5 class="card-title">
          <%= link_to category.name, category_path(category) %>
          <% if false && is_admin? %> # deactivated delete for the moment
            <small><%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "badge badge-pill badge-danger ml-3" %></small>
          <% end %>
        </h5>
      </div>
      <div class="col-md-6 text-right">
        <small class="card-text badge badge-pill" style="background-color: <%= color_code(category.id) %>; color: <%= contrast_color(category.id) %>"><%= pluralize(category.articles.count, 'article') if !category.articles.empty? %></small>
      </div>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col center-pagination">
    <%= will_paginate obj, style: "display: inline-block" %>
  </div>
</div>