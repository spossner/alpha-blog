<% obj.each do |category|  %>
  <div class="row mb-5">
    <div class="col-sm-8 offset-sm-2">
      <div class="card article-card">
        <div class="card-body">
          <%= link_to category.name, category_path(category), class: "card-text" %>
        </div>
        <% if logged_in? && is_admin? %>
        <div class="card-footer bg-transparent">
          <%= link_to'Edit', edit_category_path(category), class: "btn btn-sm btn-success ml-2" %>
          <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger ml-2" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= will_paginate obj %>
  </div>
</div>