<div class="row">
  <div class="col">
    <h1 class="text-center">Log in</h1>
  </div>
</div>

<!--%= render 'shared/errors', obj: @user %-->

<div class="row">
  <div class="col-sm-12">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :email, class: "col-form-label" %>
        </div><!-- col-sm-2 -->
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter E-Mail", autofocus: true%>
        </div><!-- col-sm-10 -->
      </div><!-- form-group -->
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :password, class: "col-form-label" %>
        </div><!-- col-sm-2 -->
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div><!-- col-sm-10 -->
      </div><!-- form-group -->
      <div class="form-group row">
        <div class="col-sm-6 offset-sm-2">
          <%= f.submit "Log in", class: "btn btn-primary" %>
          <%= link_to 'Cancel', root_path, class: "btn btn-link ml-2" %>
        </div><!-- col-sm-6 -->
      </div><!-- form-group -->
    <% end %>
  </div><!-- col-sm-12 -->
</div><!-- row -->